<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="nhlcgz.com.smartwallet.MainActivity">

    <ImageButton
        android:id="@+id/ibConnecting"
        android:layout_width="87dp"
        android:layout_height="91dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="325dp"

        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/start" />

    <ImageButton
        android:id="@+id/ibLookFor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="132dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lookingforw" />

    <ImageButton
        android:id="@+id/ibWalletAlarm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="132dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/ibLookFor"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/warningw" />

    <ImageButton
        android:id="@+id/ibPhoneBak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="28dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibLookFor"
        app:srcCompat="@drawable/dogw" />

    <ImageButton
        android:id="@+id/ibOverrangeWarn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/ibPhoneBak"
        app:layout_constraintTop_toBottomOf="@+id/ibWalletAlarm"
        app:srcCompat="@drawable/linkw" />

    <ImageButton
        android:id="@+id/ibBluetooth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="44dp"
        android:background="#00000000"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btw" />

</android.support.constraint.ConstraintLayout>
